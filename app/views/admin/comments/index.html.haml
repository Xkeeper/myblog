- content_for :head do
  = javascript_include_tag "admin_" + controller_name
%h1 Comments
%table
  %thead
    %tr
      %th Created At
      %th Commenter
      %th Excerpt
      %th Post
      %th Actions
  %tbody
    - if @comments.empty?
      %tr
        %td{:colspan => "5"} There are no comments at this time.
    - else
      = render :partial => 'comment', :collection => @comments
  %tfoot
    - if @comments.total_pages > 1
      %tr.pagination
        %td{:colspan => "5"}
          = will_paginate(@comments, :previous_label => '« Newer', :next_label => 'Older »')

